<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pf.dllo.food.activity.lib.LibKind2Aty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/default_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_lib_search_detail_aty_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@mipmap/ic_back_dark_center"/>

            <com.pf.dllo.food.tools.ClearEditText
                android:id="@+id/et_lib_search_detail_aty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_tiny_p"
                android:layout_weight="1.5"
                android:background="@null"
                android:drawableRight="@mipmap/ic_clear"
                android:padding="@dimen/default_tiny_p"
                android:singleLine="true"
                android:textSize="@dimen/default_small_tv"/>

            <!--<ImageButton-->
            <!--android:id="@+id/iv_lib_search_del_aty"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@null"-->
            <!--android:src="@mipmap/ic_clear"-->
            <!--android:visibility="invisible" />-->

            <ImageButton
                android:id="@+id/iv_lib_search_sea_detail_aty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@mipmap/ic_homepage_search"/>
        </LinearLayout>

        <include layout="@layout/layout_horizontal_divider"/>


        <LinearLayout
            android:id="@+id/ll_lib2_kind_nutri_sort"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_title_sub_height"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_lib_search_detail_aty_nutri_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/nutri_sort"
                android:textColor="@color/default_black"
                />

            <ImageButton
                android:id="@+id/ib_lib_search_detail_aty_nutri_sort"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_title_sub_height"
                android:background="@null"
                android:src="@mipmap/ic_food_arrow_ordering"
                />

            <TextView
                android:id="@+id/tv_lib_search_detail_aty_order_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/default_dark_red"/>
        </LinearLayout>

        <include
            android:id="@+id/lib_search_detail_aty_pop_divider"
            layout="@layout/layout_horizontal_divider"/>
    </LinearLayout>


    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/rv_lib_search_detail_kind"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
