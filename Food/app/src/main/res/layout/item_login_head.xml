<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@mipmap/img_my_bg"
    >

    <RelativeLayout
        android:id="@+id/tbar_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="我的"
            android:textColor="@color/default_white"
            android:textSize="@dimen/font_xxl"/>

        <ImageButton
            android:id="@+id/my_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@mipmap/ic_my_setting"
            />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_login_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbar_my"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/default_large_margin"
        android:src="@mipmap/ic_analyse_default"
        app:civ_border_color="@color/default_white"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/my_login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_login_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/default_white"
        android:textSize="@dimen/default_middle_tv"/>

    <TextView
        android:id="@+id/my_login_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_login_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/clicked_login_btn"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/edit_person_info"
        android:textColor="@color/default_white"
        android:textSize="@dimen/default_middle_tv"/>
</RelativeLayout>
