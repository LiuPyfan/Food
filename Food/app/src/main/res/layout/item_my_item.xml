<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="@dimen/default_tiny_padding">

    <ImageView
        android:id="@+id/iv_item_my_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_small_margin"
        />

    <TextView
        android:id="@+id/tv_item_my_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_small_margin"
        android:layout_toRightOf="@id/iv_item_my_photo"
        />

    <ImageView
        android:id="@+id/iv_item_my_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_small_margin"
       />
</RelativeLayout>