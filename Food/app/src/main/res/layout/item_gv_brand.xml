<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_margin="@dimen/default_large_padding">

    <ImageView
        android:id="@+id/iv_item_brand"
        android:layout_width="@dimen/item_lib_iv"
        android:layout_height="@dimen/item_lib_iv"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tv_item_brand"
        android:textSize="@dimen/default_tiny_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:layout_gravity="center"
        android:singleLine="true"
        />
</LinearLayout>