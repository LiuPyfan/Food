<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.pf.dllo.food.activity.lib.LibKind2Aty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_title_height"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/library2_more_return_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_lib2_kind_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/default_tiny_margin"
                    android:background="@null"
                    android:src="@mipmap/ic_back_dark_center"
                    />

                <TextView
                    android:id="@+id/tv_lib2_kind_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:textColor="@color/default_black"
                    android:textSize="@dimen/default_large_tv"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_lib2_kind_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"

                android:background="@null"
                android:drawableRight="@mipmap/ic_food_arrow_ordering"
                android:text="@string/kind_all"
                />

        </LinearLayout>

        <include layout="@layout/layout_horizontal_divider"
            android:id="@+id/kind_all_divider"/>

        <LinearLayout
            android:id="@+id/ll_lib2_kind_nutri_sort"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_title_sub_height"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_lib2_kind_nutri_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/nutri_sort"
                android:textColor="@color/default_black"
                />

            <ImageButton
                android:id="@+id/ib_lib2_kind_nutri_sort"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_title_sub_height"
                android:background="@null"
                android:src="@mipmap/ic_food_arrow_ordering"
                />

            <TextView
                android:id="@+id/tv_lib2_aty_order_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/default_dark_red"/>
        </LinearLayout>

        <include
            android:id="@+id/lib2_aty_pop_divider"
            layout="@layout/layout_horizontal_divider"/>
    </LinearLayout>


    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/rv_lib2_kind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
