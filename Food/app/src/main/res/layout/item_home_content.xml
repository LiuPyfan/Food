<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_content_card_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_home_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_content_card_height"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_marginTop="180dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/default_white"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_tiny_padding">
        <TextView
            android:id="@+id/tv_item_home_title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/default_middle_tv"
            android:textColor="@color/default_black"
            android:layout_height="wrap_content"
           />

        <include layout="@layout/layout_horizontal_divider"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_item_home_avatar"
                android:layout_width="@dimen/home_content_civ"
                android:layout_height="@dimen/home_content_civ"
                android:layout_margin="@dimen/default_tiny_margin"
                />

            <TextView
                android:id="@+id/tv_item_home_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/default_tiny_tv"
                android:layout_toRightOf="@id/iv_item_home_avatar"
                />

            <TextView
                android:id="@+id/tv_item_home_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_tiny_margin"
               />
            <ImageView
                android:id="@+id/iv_item_home_like"
                android:layout_width="@dimen/home_content_zan"
                android:layout_height="@dimen/home_content_zan"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_tiny_margin"
                android:background="@drawable/checked_zan_iv"
                android:layout_toLeftOf="@id/tv_item_home_like"/>
        </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>